<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/news_head_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="News Head"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:id="@+id/newsDesc_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="News Description skdsadfajfijdf isfhisf a foauofu;af f;a;fafi"
        app:layout_constraintTop_toBottomOf="@id/news_head_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:paddingBottom="50dp"
        />
    <TextView
        android:id="@+id/news_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News Source"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/newsDesc_detail"
        android:paddingBottom="50dp"
        />
</android.support.constraint.ConstraintLayout>